<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_card"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/job">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeContent"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello wrold"
                android:layout_alignParentLeft="true"
                android:id="@+id/tvJobHeading"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello wrold"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_below="@+id/tvJobHeading"
                android:layout_alignParentLeft="true"
                android:id="@+id/tvJobLocation"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello wrold"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tvJobLocation"
                android:layout_alignParentLeft="true"
                android:id="@+id/tvJobCompany"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvJobLocation"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:layout_marginTop="50dp"
                android:layout_marginRight="0dp"
                android:text="May 20,2015"
                android:textSize="10sp"
                android:id="@+id/tvDate"/>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>